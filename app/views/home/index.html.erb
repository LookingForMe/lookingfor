<div class="container">
  <div class="page-header">
    <h1>Lookingfor
      <small>
        <%= @jobs.total_entries %> Jobs from <%= @company_count %> Companies
      </small>
    </h1>
    <small>
      Jobs from <a href="https://authenticjobs.com/">Authentic Jobs</a>, <a href="http://stackoverflow.com/jobs">Stack Overflow</a>, and <a href="https://weworkremotely.com">We Work Remotely</a>
    </small>
  </div>

  <div class="col-md-3">
    <ul class="list-group">
      <% @tech_names.each do |tn| %>
        <li class="list-group-item"><%= tn.capitalize %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-9">
    <ul class="job-list">
      <% @jobs.each do |job| %>
        <li class="no-dots">
          <div class="panel panel-default">
            <div class="panel-body">
              <h4><%= job.decorated_title %>
                <small> @ <%= link_to "#{job.company_name}", company_path(job.company.id) %></small><br><br>
                <%= link_to "View Listing", job_path(job), class: "btn btn-primary" %>
              </h4>
            </div>
            <div class="panel-footer">
              <% job.tech_names.each do |name| %>
                <span class="label label-primary"><%= name.titleize %></span>
              <% end %>
              <span class="pull-right"><%= job.decorated_date %></span>
              <span class="clearfix"></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="text-center">
      <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
